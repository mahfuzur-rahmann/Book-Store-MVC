@model List<Category> 

<div class="card shadow border-0 mt-4">

    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Category list </h2>
            </div>
        </div>
    </div>

    <div class="card-body py-2">

        <div class="row pb-1 ">
            <div class="col-6">
            </div>

            <div class="col-6 text-end ">
                <a asp-controller="Category" asp-action="Create" class="btn btn-dark"><i class="bi bi-patch-plus"></i> Create category</a>
            </div>

        </div>
        <table class="table table-hover ">
            <thead class="">
                <tr class=" border-bottom border-black ">
                    <th class=" col-4">Name</th>
                    <th class=" col-4">Display order</th>
                    <th class=" col-4">Operation</th>
                </tr>
            </thead>

            <tbody>
                @* @foreach (var data in Model.OrderBy(x => x.DisplayOrder)) -- this can be used to sort on any column *@

                @foreach (var data in Model)

                {
                    <tr class="">
                        <td>@data.Name</td>
                        <td>@data.DisplayOrder</td>
                        <td>
                            <div class="btn-group w-80 text-center " role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-Id="@data.Id" class="btn btn-info mx-2">
                                    <i class="bi bi-pen"></i> Edit
                                </a>

                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@data.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-x-circle-fill"></i> Delete
                                </a>
                            </div>

                        </td>

                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>
