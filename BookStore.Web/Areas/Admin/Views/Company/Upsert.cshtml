@model Company

<div class="card shadow border-0 mt-4">

    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.Id != 0? "Update": "Create") Company </h2>
            </div>
        </div>
    </div>

    <div class="card-body py-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />

           <div class="row">
               <div class="col-12">
                    <div class="border p-3 mt-1">

                        @* <div asp-validation-summary="ModelOnly"></div> *@
                        <div class="mb-3 row p-1">
                            <label asp-for="Name" class="p-0"></label>
                            <input asp-for="Name" class="form-control  border border-secondary" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3 row p-1">
                            <label asp-for="PhoneNumber" class="p-0"> </label>
                            <input asp-for="PhoneNumber" class=" form-control border border-secondary" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                        </div>

                        <div class="mb-3 row p-1">
                            <label asp-for="StreetAddress" class="p-0"> </label>
                            <input asp-for="StreetAddress" class=" form-control border border-secondary" />
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>

                        </div>



                        <div class="mb-3 row p-1">
                            <label asp-for="City" class="p-0"> </label>
                            <input asp-for="City" class=" form-control border border-secondary" />
                            <span asp-validation-for="City" class="text-danger"></span>

                        </div>



                        <div class="mb-3 row p-1">
                            <label asp-for="State" class="p-0"> </label>
                            <input asp-for="State" class=" form-control border border-secondary" />
                            <span asp-validation-for="State" class="text-danger"></span>

                        </div>

                        <div class="mb-3 row p-1">
                            <label asp-for="PostalCode" class="p-0"> </label>
                            <input asp-for="PostalCode" class=" form-control border border-secondary" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>

                        </div>

                        

                        <div class="row">

                            @if (Model.Id != 0)
                            {
                                <div class="col-6 col-md-3">
                                    <button class="btn btn-outline-dark form-control ">Update</button>
                                </div>
                            }
                            else
                            {
                                <div class="col-6 col-md-3">
                                    <button class="btn btn-outline-dark form-control ">Create</button>
                                </div>
                            }



                            <div class="col-6 col-md-3 ">
                                <a asp-controller="Company" asp-action="Index" class=" form-control btn btn-outline-secondary text-dark">Back to list</a>
                            </div>
                        </div>



                    </div>
               </div>
               
           </div>
        </form>
    </div>
</div>



@section Scripts{

    @{
    <partial name="_ValidationScriptsPartial" />
    }
}