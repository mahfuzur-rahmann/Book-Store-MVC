
@model List<Company>;

<div class="card shadow border-0 mt-4">

    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Company list </h2>
            </div>
        </div>
    </div>

    <div class="card-body py-2">

        <div class="row pb-1 ">
            <div class="col-6">
                
            </div>

            <div class="col-6 text-end ">
                <a asp-controller="Company" asp-action="Upsert" class="btn btn-dark"><i class="bi bi-patch-plus"></i> Create product</a>
            </div>

        </div>
        <table id="tblData" class="table table-hover " style="width:100%;">
            <thead class="">
                <tr class=" border-bottom border-black ">
                    <th >Name</th>
                    <th >Address</th>
                    <th >City</th>
                    <th >State</th>
                    <th >Phone number</th>
                    <th ></th>
                </tr>
            </thead>

        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/company.js"></script>
}

