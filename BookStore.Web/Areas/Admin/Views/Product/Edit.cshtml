@model Product
<div class="card shadow border-0 mt-4">

    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Edit Product </h2>
            </div>
        </div>
    </div>

    <div class="card-body py-4">
        <form method="post">
            <div class="border p-3">
                

                @* <div asp-validation-summary="ModelOnly"></div> *@
                <div class="mb-3 row p-1">
                    <label asp-for="Title" class="p-0"></label>
                    <input asp-for="Title" class="form-control  border border-secondary" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Author" class="p-0"> </label>
                    <input asp-for="Author" class=" form-control border border-secondary" />
                    <span asp-validation-for="Author" class="text-danger"></span>

                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="ISBN" class="p-0"> </label>
                    <input asp-for="ISBN" class=" form-control border border-secondary" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>

                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Description" class="p-0"> </label>
                    <textarea asp-for="Description" class=" form-control border border-secondary" ></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="ListPrice" class="p-0"> </label>
                    <input asp-for="ListPrice" class=" form-control border border-secondary" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>

                </div>

               

                <div class="mb-3 row p-1">
                    <label asp-for="Price" class="p-0"> </label>
                    <input asp-for="Price" class=" form-control border border-secondary" />
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Price50" class="p-0"> </label>
                    <input asp-for="Price50" class=" form-control border border-secondary" />
                    <span asp-validation-for="Price50" class="text-danger"></span>

                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Price100" class="p-0"> </label>
                    <input asp-for="Price100" class=" form-control border border-secondary" />
                    <span asp-validation-for="Price100" class="text-danger"></span>

                </div>

                <div class="row">

                    <div class="col-6 col-md-3">
                        <button class="btn  form-control btn-outline-dark ">Update</button>
                    </div>

                    <div class="col-6 col-md-3 ">
                        <a asp-controller="Product" asp-action="Index" class=" form-control btn btn-outline-secondary text-dark">Back to list</a>
                    </div>
                </div>



            </div>
        </form>
    </div>
</div>



@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}