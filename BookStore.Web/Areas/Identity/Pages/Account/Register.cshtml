@page
@using BookStore.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-7 ">
        @if (User.IsInRole(StaticDetails.Role_Admin))
        {
            <h1>Register -- Admin portal</h1>

        }
        else
        {
            <h1>@ViewData["Title"]</h1>

        }
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6 ">
        <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>

            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 col-12">
                <input asp-for="Input.Name" class="form-control border border-secondary" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Name">Enter your name</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.Email" class="form-control border border-secondary" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.PhoneNumber" class="form-control border border-secondary" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.PhoneNumber">Phone number</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>


            <div class="form-floating mb-3 col-12">
                <input asp-for="Input.StreetAddress" class="form-control border border-secondary" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.StreetAddress">Street Address</label>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>


            <div class="form-floating mb-3 col-4">
                <input asp-for="Input.City" class="form-control border border-secondary" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.City">City</label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 col-4">
                <input asp-for="Input.State" class="form-control border border-secondary" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.State">State</label>
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 col-4">
                <input asp-for="Input.PostalCode" class="form-control border border-secondary" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.PostalCode">Postal code</label>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>







            <div class="form-floating mb-3 col-6 ">
                <input asp-for="Input.Password" class="form-control border border-secondary" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.ConfirmPassword" class="form-control border border-secondary" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            @if (User.IsInRole(StaticDetails.Role_Admin))
            {
                <div class="form-floating mb-3 col-6">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                        <option disabled selected>----Select Role----</option>
                    </select>
                </div>


                <div class="form-floating mb-3 col-6">
                    <select asp-for="Input.CompanyId" style="display: none;" asp-items="@Model.Input.CompanyList" class="form-select">
                        <option disabled selected>----Select Company----</option>
                    </select>
                </div>
            }
            <button id="registerSubmit" type="submit" class="w-100 btn  btn-primary">Register</button>
        </form>



    </div>

    @if (!User.IsInRole(StaticDetails.Role_Admin))
    {
        <div class="col-md-6 col-md-offset-2">
            <section>
                <h3>Use another service to register.</h3>
                <hr />
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div>
                            <p>
                                There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                    article
                                    about setting up this ASP.NET application to support logging in via external services
                                </a>.
                            </p>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                </p>
                            </div>
                        </form>
                    }
                }
            </section>
        </div>
    }

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />


    <script>

        $(document).ready(function () {
            console.log("acv");
        });

        $(document).ready(function () {
            $('#Input_Role').change(function () {
                var selection = $('#Input_Role option:selected').text();
                if (selection != 'Company') {
                    $('#Input_CompanyId').hide();
                } else {
                    $('#Input_CompanyId').show();

                }
            })
        }
        )

    </script>
}
